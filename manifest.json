{
    "manifest_version": 2,
    "name": "Green Minehut",
    "description": "Just a green version of Minehut's control panel.",
    "version": "1.1",
    "browser_action": {
        "default_icon": "favicon.png",
        "default_popup": "popup.html",
        "default_title": "Green Minehut by Ilas_"
    },
    "content_scripts": [{
        "matches": ["https://*.minehut.com/*"],
        "exclude_matches": ["https://forums.minehut.com/*"],
        "js": ["content-script.js"]
    }],
    "permissions": [ "tabs", "https://*.minehut.com/*" ]
}

